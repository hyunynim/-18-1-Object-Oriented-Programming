import java.util.Scanner;

public class TestCourse {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner input = new Scanner(System.in);
		System.out.printf("Name of course : ");
		String courseName = input.nextLine();
		System.out.printf("Number of students in %s: ", courseName);
		int courseSize = input.nextInt();
		Course c1 = new Course(courseName, courseSize);
		
		System.out.printf("Input %d students name(ENTER): ", courseSize);
		
		
		for(int i = 0; i<courseSize; ++i) {
			String studentName = input.nextLine();
			c1.addStudent(studentName);
		}

		System.out.printf("Number of students in course1 after dorp Peter Jones: ");
		c1.dropStudent("Peter Jones");
		System.out.printf("%d",  c1.getNumberOfStudents());
	}

}
